:ruby
  # may be set by partials

  def keywords
    if is_front_page?
      tag_set.join(', ')
    else
      keywords = []
      unless @item[:tags].nil?
        keywords << @item[:tags]
      end
      unless @item[:keywords].nil?
        keywords << @item[:keywords]
      end
      keywords.join(', ')
    end
  end

  content = find_and_preserve(yield)

!!!
%html.no-js
  %head
    %title<
      - if @item[:title]
        = "#{@item[:title]} | #{site_name}"
      - else
        = site_name
    %meta{:charset => 'utf-8'}
    %meta{:name => 'keywords', :content => keywords}
    %meta{:name => 'description', :content => (@item[:excerpt] ? @item[:excerpt] : site_description)}
    %link{:href => '/assets/css/site.css', :rel => 'stylesheet', :type => 'text/css'}
    %script{:type => 'text/javascript', :src => '/assets/javascripts/modernizr-17.js'}
    = render('_ganalytics')

  %body

    #wrap

      %header
        - if is_front_page?
          %h1#logo= site_name
        - else
          %h1#logo.has_link
            %a{:href => '/'}= site_name

        %p.feed
          %a{:href => '/atom.xml'} Feed

        %form#search{:method => 'get', :action => '/search.html'}
          %fieldset
            %legend Search
            %input{:type => 'search', :placeholder => 'Search', :name => 'query'}

        %ul#networks
          %li
            %a.linkedin{:href => 'http://www.linkedin.com/in/tomeij'} LinkedIn
          %li
            %a.facebook{:href => 'http://www.facebook.com/roytomeij'} Facebook
          %li
            %a.twitter{:href => 'http://twitter.com/roy'} Twitter

      - if @item[:kind] == 'article'
        %section#post
          = render('_article', :item => @item, :content => content)
          - if disqus_shortname && (@item[:disqus] != false) && !is_front_page?
            = render('_disqus', :item => @item)
      - else
        = content

      %footer#footer
        %p Design by <a href="http://ivanasetiawan.com/">Ivana Setiawan</a>. This website (design, code & content) is licensed under a <a href="http://creativecommons.org/licenses/by-sa/3.0/">Creative Commons BY-SA license</a>. Find it all on <a href="https://github.com/roytomeij/roytomeij.com">GitHub</a>.

